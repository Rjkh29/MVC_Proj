@model MVC_Proj.Models.Entities.Customer
@{
    ViewData["Title"] = "Customer Details";
}

<div class="container my-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">Customer Details</h3>
        </div>
        <div class="card-body">
            <div class="mb-3">
                <label class="form-label">Customer ID</label>
                <input type="text" class="form-control" value="@Model.CustomerId" readonly>
            </div>

            <div class="mb-3">
                <label class="form-label">Customer Name</label>
                <input type="text" class="form-control" value="@Model.CustomerName" readonly>
            </div>

            <div class="mb-3">
                <label class="form-label">Customer Email</label>
                <textarea class="form-control" rows="2" readonly>@Model.CustomerEmail</textarea>
            </div>

            <div class="mb-3">
                <label class="form-label">Customer Address</label>
                <input type="text" class="form-control" value="@Model.CustomerAddress" readonly>
            </div>

            <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
        </div>
    </div>
</div>
