@model List<MVC_Proj.Models.Entities.Customer>
@{
    ViewData["Title"] = "Customer List";
}

<h2 class="my-4 text-info">Customer List</h2>

<a asp-controller="Customer" asp-action="Create" class="btn btn-success mb-3 float-end">+ Add Customer</a>

<div class="container my-5">
    <table class="table table-hover table-striped shadow-sm rounded">
        <thead class="table-dark">
            <tr>
                <th>Customer ID</th>
                <th>Name</th>
                <th>Email</th>
                <th>Address</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model)
            {
                <tr>
                    <td>@customer.CustomerId</td>
                    <td>@customer.CustomerName</td>
                    <td>@customer.CustomerEmail</td>
                    <td>@customer.CustomerAddress</td>
                    <td>
                        <div class="d-flex gap-2">
                            <a asp-controller="Customer" asp-action="Edit" asp-route-id="@customer.CustomerId" class="btn btn-warning btn-sm">Edit</a>
                            <form asp-controller="Customer" asp-action="Delete" asp-route-customerid="@customer.CustomerId" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <input type="submit" class="btn btn-danger btn-sm" value="Delete" onclick="return confirm('Are you sure you want to delete this customer?');" />
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
