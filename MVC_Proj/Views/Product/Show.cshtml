@model MVC_Proj.Models.Entities.Product
@{
    ViewData["Title"] = "Product Details";
}

<div class="container my-5">
    <div class="card shadow-sm rounded-4">
        <div class="card-header bg-info text-white">
            <h1 class="text-primary mb-4">Product Details</h1>

                <form class="shadow p-4 rounded bg-light">
                    <div class="mb-3">
                        <label class="form-label">Product ID</label>
                        <input type="text" class="form-control" value="@Model.ProductId" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Name</label>
                        <input type="text" class="form-control" value="@Model.ProductName" readonly>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Description</label>
                        <textarea class="form-control" rows="3" readonly>@Model.ProductDescription</textarea>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Product Stock</label>
                        <input type="text" class="form-control" value="@Model.ProductStock" readonly>
                    </div>

                    <a href="@Url.Action("Index")" class="btn btn-secondary">Back to List</a>
                </form>
        </div>
    </div>
</div>