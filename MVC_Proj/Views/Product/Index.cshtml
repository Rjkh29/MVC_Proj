@model List<MVC_Proj.Models.Entities.Product>
@{
    ViewData["Title"] = "Product List";
}

<h2 class="my-4 text-info">Product List</h2>

<a asp-controller="Product" asp-action="Create" class="btn btn-success mb-3 float-end">+ Add Product</a>

<div class="container my-5">
    <table class="table table-bordered table-hover shadow-sm">
        <thead class="table-dark">
            <tr>
                <th>Product ID</th>
                <th>Name</th>
                <th>Description</th>
                <th>Stock</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.ProductId</td>
                    <td>@product.ProductName</td>
                    <td>@product.ProductDescription</td>
                    <td>@product.ProductStock</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-sm btn-warning me-1">Edit</a>

                        <form asp-controller="Product" asp-action="Delete" asp-route-productid="@product.ProductId" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="submit" class="btn btn-sm btn-danger me-1" value="Delete" onclick="return confirm('Are you sure you want to delete this product?');" />
                        </form>

                        <a asp-controller="Product" asp-action="Show" asp-route-id="@product.ProductId" class="btn btn-sm btn-info">Details</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
